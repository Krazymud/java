<?xml version="1.0" encoding="UTF-8"?>
<project name="module_t" default="compile.module.t">
  <dirname property="module.t.basedir" file="${ant.file.module_t}"/>
  
  <property name="module.jdk.home.t" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.t" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.t" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.t" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="t.output.dir" value="${module.t.basedir}/out/production/t"/>
  <property name="t.testoutput.dir" value="${module.t.basedir}/out/test/t"/>
  
  <path id="t.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="t.module.production.classpath">
    <path refid="${module.jdk.classpath.t}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="t.runtime.production.module.classpath">
    <pathelement location="${t.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="t.module.classpath">
    <path refid="${module.jdk.classpath.t}"/>
    <pathelement location="${t.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="t.runtime.module.classpath">
    <pathelement location="${t.testoutput.dir}"/>
    <pathelement location="${t.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.t">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.t">
    <patternset refid="excluded.from.module.t"/>
  </patternset>
  
  <path id="t.module.sourcepath">
    <dirset dir="${module.t.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.t" depends="compile.module.t.production,compile.module.t.tests" description="Compile module t"/>
  
  <target name="compile.module.t.production" depends="register.custom.compilers" description="Compile module t; production classes">
    <mkdir dir="${t.output.dir}"/>
    <javac2 destdir="${t.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.t}/javac">
      <compilerarg line="${compiler.args.t}"/>
      <bootclasspath refid="t.module.bootclasspath"/>
      <classpath refid="t.module.production.classpath"/>
      <src refid="t.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.t"/>
    </javac2>
    
    <copy todir="${t.output.dir}">
      <fileset dir="${module.t.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.t.tests" depends="register.custom.compilers,compile.module.t.production" description="compile module t; test classes" unless="skip.tests"/>
  
  <target name="clean.module.t" description="cleanup module">
    <delete dir="${t.output.dir}"/>
    <delete dir="${t.testoutput.dir}"/>
  </target>
</project>